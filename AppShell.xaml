<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Olaeriu_Todean.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Olaeriu_Todean"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="DarkRed">


    <TabBar>

        <ShellContent 
                Title="Clinica Privată 'Regina Maria'"
                ContentTemplate="{DataTemplate local:MainPage}"
        />
        <ShellContent
                Title="Programările mele"
                ContentTemplate="{DataTemplate local:ListaAdaugareProgramari}"
        />
        <ShellContent
                Title="Locații"
                ContentTemplate="{DataTemplate local:AdaugareClinica}"
        />
        <ShellContent
                Title="Despre"
                ContentTemplate="{DataTemplate local:DesprePagina}"
        />
        
        
    </TabBar>
</Shell>
